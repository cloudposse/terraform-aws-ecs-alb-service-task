[
  {
    "name": "web",
    "image": "nginx:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80,
        "protocol": "tcp"
      }
    ],
    "memory": 256,
    "networkMode": "awsvpc",
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "us-west-2",
        "awslogs-stream-prefix": "web"
      }
    },
    "environment": [
      {"name": "NGINX_PORT", "value": "80"}
    ]
  }
]
